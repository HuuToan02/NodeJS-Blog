<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{post.title}}</title>
  <link rel="stylesheet" href="/css/post.css" />
</head>

<body>
  <form name="delete-post-form" action="/blog/{{post._id}}?_method=DELETE" type="submit" method="POST">
    <div class="post">
      <div class="post-title d-flex justify-content-between">
        <h2 class="post-title">
          {{post.title}}
        </h2>

        <div class="dropdown">
          <button class="btn btn-primary post-menu" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"
            aria-expanded="false">
            <i class="fas fa-ellipsis-h"></i>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li><button class="dropdown-item" href="/blog/{{post._id}}/edit">
                <i class="fas fa-pen icon-title"></i>Edit Post</button></li>
            <li><button class="dropdown-item dropdown-item-delete"><i class="fas fa-trash-alt icon-title"
                  data-id="{{post._id}}"></i>
                Delete
              </button></li>
          </ul>
        </div>

      </div>

      <hr class="post-hr" style="height: 5px" />

      <div class="post-author">
        <img src="../img/author.webp" alt="" class="post-author-img" />
        <p class="post-author-link">{{post.author}}</p>
        <button type="button" class="btn btn-primary">Follow</button>
      </div>

      <p class="post-description">
        {{post.description}}
      </p>

      <p class="post-picture align-items-center">
        <img src="{{post.img}}" />
      </p>

      <p class="post-content">
        {{post.content}}
      </p>

      <hr class="mt-4 mb-4 post-hr" style="height: 5px" />

      <p class="post-creatat">
        {{post.createdAt}}
      </p>
    </div>
  </form>
  {{> comment }}
</body>

</html>